head 
  meta(charset="utf-8")
  meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
  title Đăng nhập
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css")
body(class = "h-100" style="background:rgb(255, 216, 0)") 
  div(class="h-100 d-flex align-items-center justify-content-center")
    form(action="/login" method="post" class="form-group col-md-3")
      div(class="row mb-2")
        input(type="email" name="email" class="form-control" placeholder ="Email address")
      div(class="row mb-4")
        input(type="password" name="password" class="form-control" placeholder = "Password")
      div(class = "row")
        div(class="col")
          button(type="submit" name="signup" class="btn btn-primary btn-block col-12") Sign Up
        div(class="col")
          button(type="submit" name="login" class="btn btn-primary btn-block col-12") Log In