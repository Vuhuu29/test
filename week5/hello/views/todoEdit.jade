head
    meta(charset="utf-8") 
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Chỉnh sửa công việc
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css")

body(class="container" style="background:rgb(255, 216, 0)")
    div(class="h-100 d-flex align-items-center justify-content-center")
        form(action="" method="post" class="col-md-8")
            div(class="mb-4 row")
                div(class="col-md-3")
                    label(for="title") Title
                div(class="col-md-9")
                    textarea(class="form-control" name="title" rows="5")= title
            div(class="mb-4 row")
                div(class="col-md-3")
                    label(for="desc") Decsription
                div(class="col-md-9")
                    textarea(class="form-control" name="decsription" rows="10")= decsription
            div(class="mb-4 row")
                div(class="col-md-3")
                    label(for="desc") Status 
                div(class="col-md-1")
                    case is_done
                        when false
                            input(type="checkbox" class="form-check-input" name = "is_done" id = "is_done")
                        when true
                            input(type="checkbox" class="form-check-input" name = "is_done" id = "is_done" checked)
                div(class="col-md-8")
                    label(class="form-check-label" for="is_done") Đã hoàn thành
            div(class="row d-flex justify-content-center")
                div(class="col-md-2")
                    button(type="submit" name="save" class="w-100 btn btn-primary btn-block") Save
                div(class="col-md-2")
                    button(type="submit" name="delete" class="w-100 btn btn-primary btn-block") Delete